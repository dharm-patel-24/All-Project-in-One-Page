<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delimiter Search</title>
    <style>
        .button {
            background-color: #ff7733;
            font-size: medium;
        }
        .button:hover {
            background-color: #ff5500;
        }
    </style>
</head>

<body style="background-color: #ffddcc;">
    <table border="1"
    style="color: black; background-color: rgb(40, 108, 110); justify-content: center; text-align: center; border-collapse: collapse;">
        <tr style="background-color: #ff7733;">
            <th>First Name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>Number</th>
            <th>Age</th>
            <th>City</th>
        </tr>
        <tr style="background-color: #ffbb99;">
            <td>_</td>
            <td>^</td>
            <td>$</td>
            <td>{</td>
            <td>}</td>
            <td>:</td>
        </tr>
    </table>
    <br><br>
    <form method="post" action="/delimiter-search-result" style="text-align: center; margin: 10 auto;">
        <input autofocus type="text" name="str" value="<%= query%>" placeholder="Search"
            style="height: 30px; width: 330px; border: none;">
        <input type="submit" class="button" value="Go" style="height: 34px; padding: 7px 20px; border: none;">
    </form>
    <br><br>
    <% if(display=="show" ) { %>
        <% try { %>
            <table border="1"
                style="color: black; justify-content: center; text-align: center; border-collapse: collapse;">
                <tr style="background-color: #ff7733;">
                    <th>Student Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email Id</th>
                    <th>Phone Number</th>
                    <th>Stream</th>
                    <th>Age</th>
                    <th>City</th>
                    <th>Gender</th>
                    <th>Created Date</th>
                </tr>
                <% data.forEach(function(item) { %>
                    <tr style="background-color: #ffbb99;">
                        <td>
                            <%= item.std_id %>
                        </td>
                        <td>
                            <%= item.first_name %>
                        </td>
                        <td>
                            <%= item.last_name %>
                        </td>
                        <td>
                            <%= item.email %>
                        </td>
                        <td>
                            <%= item.number %>
                        </td>
                        <td>
                            <%= item.stream %>
                        </td>
                        <td>
                            <%= item.age %>
                        </td>
                        <td>
                            <%= item.city %>
                        </td>
                        <td>
                            <%= item.gender %>
                        </td>
                        <td>
                            <%= item.created_date %>
                        </td>
                    </tr>
                    <% }); %>
            </table>
            <% } catch(err) {%>
                <% } %>
                    <% } %>
</body>

</html>