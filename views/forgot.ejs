<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Password</title>
    <style>
        body {
            font-family: codewell, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Oxygen, Ubuntu, Cantarell, Fira Sans, Droid Sans, Helvetica Neue, sans-serif;
            background-color: #C1CDF5;
        }

        h1 {
            text-align: center;
            margin-top: 260px;
        }

        .main {
            font-size: large;
            border-radius: 9px;
            margin: 0px 650px;
            background-color: #859FEC;
            padding: 20px 50px;
        }

        .big {
            height: 20px;
            width: 180px;
        }

        .btnClass {
            padding: 5px 10px;
        }

        .btn {
            width: 100%;
            height: 40px;
            font-size: medium;
            background-color: #4169E1;
            border: none;
            cursor: pointer;
            border-radius: 7px;
        }

        .btn:hover {
            background-color: #2a5aeb;
        }
        a {
            margin: 0px 100px;
        }
    </style>
</head>

<body>
    <form id="forgot">
        <h1>Forgot Password</h1>
        <div class="main">
            <label for="">Enter your Email</label> <br><br>
            <input type="text" class="big" name="email" id="email">
            <br><br><br>
            <div id="black"></div>
            <a id="msg" name="acti"></a>
            <div class="btnClass">
                <input type="submit" class="btn" value="Submit">
            </div>
        </div>
    </form>
    <script>
function randomStr(len, arr) {
            let ans = '';
            for (let i = len; i > 0; i--) {
                ans += arr[(Math.floor(Math.random() * arr.length))];
            }
            var email = document.getElementById('email').value;
            document.getElementById('black').innerHTML = "Click on this link for Activation: ";
            document.getElementById('msg').innerHTML = "http://localhost:8090/regenerated/" + email;
            document.getElementById('msg').setAttribute('href', '/regenerated/?email=' + email);
        }

        document.getElementById('forgot').addEventListener('submit', (event) => {
            event.preventDefault();
            let form = document.getElementById('forgot');
            let form_data = new FormData(form);

            const xhr = new XMLHttpRequest();
            xhr.open('POST', '/email', true);
            xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');

            xhr.onload = function () {
                if (this.status == 200) {
                    console.log(this.responseText);
                }
            }
            xhr.send(new URLSearchParams(form_data));

            randomStr(12, '12345abcde');
        });
    </script>
</body>

</html>